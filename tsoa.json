{
	"entryFile": "src/app.ts",
	"noImplicitAdditionalProperties": "throw-on-extras",
	"controllerPathGlobs": [
		"src/controller/**/*.ts"
	],
	"spec": {
		"specMerging": "recursive",
		"outputDirectory": "./",
		"specVersion": 3,
		"host": "localhost:3000",
		"spec": {
			"paths": {
				"/conversion": {
					"post": {
						"requestBody": {
							"required": true,
							"content": {
								"multipart/form-data": {
									"schema": {
										"type": "object",
										"properties": {
											"conversionFile": {
												"type": "string",
												"format": "binary"
											},
											"originalFormat": {
												"type": "string"
											},
											"targetFormat": {
												"type": "string"
											}
										}
									}
								}
							}
						}
					}
				},
				"/conversion/{conversionId}/download": {
					"get": {
						"responses": {
							"200": {
								"description": "Ok",
								"content": {
									"application/pdf": {
										"schema":{
											"type": "string",
											"format": "byte"
										}
									}
								}
							}
						}
					}
				}
			}
		}
	},
	"routes": {
		"middleware": "express",
		"routesDir": "src/routes"
	}
}
